:root {
	/* =~= Theme Properties =~= */
	--theme-font-family-base: Inter, ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
		'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji',
		'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
	--theme-font-family-heading: Inter, ui-sans-serif, system-ui, -apple-system, BlinkMacSystemFont,
		'Segoe UI', Roboto, 'Helvetica Neue', Arial, 'Noto Sans', sans-serif, 'Apple Color Emoji',
		'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji';
	--theme-font-color-base: 0 0 0;
	--theme-font-color-dark: var(--color-primary-100);
	--theme-rounded-base: 8px;
	--theme-rounded-container: 6px;
	--theme-border-base: 1px;
	/* =~= Theme On-X Colors =~= */
	--on-primary: 0 0 0;
	--on-secondary: 0 0 0;
	--on-tertiary: 0 0 0;
	--on-success: 0 0 0;
	--on-warning: 0 0 0;
	--on-error: 255 255 255;
	--on-surface: 255 255 255;
	/* =~= Theme Colors  =~= */
	/* primary | #3b82f6 */
	--color-primary-50: 226 236 254; /* ⬅ #e2ecfe */
	--color-primary-100: 216 230 253; /* ⬅ #d8e6fd */
	--color-primary-200: 206 224 253; /* ⬅ #cee0fd */
	--color-primary-300: 177 205 251; /* ⬅ #b1cdfb */
	--color-primary-400: 118 168 249; /* ⬅ #76a8f9 */
	--color-primary-500: 59 130 246; /* ⬅ #3b82f6 */
	--color-primary-600: 53 117 221; /* ⬅ #3575dd */
	--color-primary-700: 44 98 185; /* ⬅ #2c62b9 */
	--color-primary-800: 35 78 148; /* ⬅ #234e94 */
	--color-primary-900: 29 64 121; /* ⬅ #1d4079 */
	/* secondary | #47FF75 */
	--color-secondary-50: 227 255 234; /* ⬅ #e3ffea */
	--color-secondary-100: 218 255 227; /* ⬅ #daffe3 */
	--color-secondary-200: 209 255 221; /* ⬅ #d1ffdd */
	--color-secondary-300: 181 255 200; /* ⬅ #b5ffc8 */
	--color-secondary-400: 126 255 158; /* ⬅ #7eff9e */
	--color-secondary-500: 71 255 117; /* ⬅ #47FF75 */
	--color-secondary-600: 64 230 105; /* ⬅ #40e669 */
	--color-secondary-700: 53 191 88; /* ⬅ #35bf58 */
	--color-secondary-800: 43 153 70; /* ⬅ #2b9946 */
	--color-secondary-900: 35 125 57; /* ⬅ #237d39 */
	/* tertiary | #0790d5 */
	--color-tertiary-50: 218 238 249; /* ⬅ #daeef9 */
	--color-tertiary-100: 205 233 247; /* ⬅ #cde9f7 */
	--color-tertiary-200: 193 227 245; /* ⬅ #c1e3f5 */
	--color-tertiary-300: 156 211 238; /* ⬅ #9cd3ee */
	--color-tertiary-400: 81 177 226; /* ⬅ #51b1e2 */
	--color-tertiary-500: 7 144 213; /* ⬅ #0790d5 */
	--color-tertiary-600: 6 130 192; /* ⬅ #0682c0 */
	--color-tertiary-700: 5 108 160; /* ⬅ #056ca0 */
	--color-tertiary-800: 4 86 128; /* ⬅ #045680 */
	--color-tertiary-900: 3 71 104; /* ⬅ #034768 */
	/* success | #4FE70D */
	--color-success-50: 229 251 219; /* ⬅ #e5fbdb */
